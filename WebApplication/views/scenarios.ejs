<% include ./layout %>

<div class="container-fluid">


  <div class="row content">
    <div class="col-sm-3 sidenav">
      <h4>Scenarios</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#">Life Satisfaction</a></li>
        <li><a href="/scenarios/ieo">IEO</a></li>
        <li><a href="/scenarios/ier">IER</a></li>
        <li><a href="/scenarios/health">Poor Health</a></li>
        <li><a href="/scenarios/volunteer">Volunteer Work</a></li>
      </ul><br/>
    </div>

    <div class="col-sm-9">
      <h2>Twitter VS Aurin Anaysis</h2>
      <hr/>
      <h3>Aurin Data</h3>
 

      <ul>
        
        <li style="width:800px; height:700px;">
        <canvas id="myChart"></canvas>
        </li>

      </ul>
      <hr/>
      <h3><%= title %></h3>
      <p><%= suburbs %></p>
      <p><%= scores %></p>
  




      <br/><br/>
    </div>
  </div>
</div>

<script type='text/javascript'>

var scor_num = <%- (scores) %>

var suburbs = <%- suburbs %>

var title = <%- JSON.stringify(title) %>

var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: suburbs,
        datasets: [{
            label: title,
            data: scor_num,
            backgroundColor: [
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(255, 206, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(255, 159, 64, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(153, 102, 255, 0.8)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(153, 102, 255, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});


</script>